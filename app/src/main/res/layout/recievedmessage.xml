<TextView
    android:id="@+id/sendername"
    android:layout_marginLeft="15dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:text="Rose"/>
    <!--
    part of text view
    android:layout_toRightOf="@+id/avatar"
    android:layout_alignTop="@+id/avatar"-->
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/sender_message_body"
    android:layout_below="@+id/sendername"
    android:layout_alignLeft="@+id/sendername"
    android:background="@drawable/recievedmessage"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp"
    android:elevation="2dp"
    android:textSize="18dp"
    android:text="How are you doing? This is a long message that should probably wrap."
    />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="36dp"
        android:layout_height="28dp"
        android:layout_below="@id/sender_message_body"
        android:layout_alignLeft="@+id/sendername"/>

</RelativeLayout>